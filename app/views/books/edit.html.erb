<% if flash[:notice] %>
 <div class="alert alert-primary" role="alert">
     <%= notice %>
 </div>
<% end %>

<h2>Eating Book</h2>

    <%= form_with model: Book.new do |f| %>
        <div class="field">
          <label for="book_title">Title</label>
          <input class="book_title" type="text" value="<%= @book.title %>" name="book[title]"id="book_title">
        </div>


        <div class="field">
          <label for="book_body">Body</label>
          <textarea class="book_body" name="book[body]" id="book_body"><%= @book.body %></textarea>
        </div>

        <div class="actions">
          <%= f.submit 'Update Book'%>
        </div>

    <% end %>

    <tbody>
        <tr>
          <td><%= link_to "Show", book_path(@book) %></td>
          <td><%= link_to "Back", books_path(@book) %></td>
        </tr>

      </tbody>