<h2>Eating</h2>

    <%= form_with model: Book.new do |f| %>
        <div class="field">
          <label for="book_title">Title</label>
          <%= f.text_field :title %>
        </div>


        <div class="field">
          <label for="book_body">Body</label>
        <%= f.text_area :body %>
        </div>

        <div class="actions">
          <%= f.submit 'Update Book'%>
        </div>

    <% end %>

    <tbody>
        <% @books.each do |book| %>
        <tr>

          <td><%= link_to "Show", book_path(book) %></td>
          <td><%= link_to "Back", books_path(book) %></td>
        </tr>
        <% end %>
      </tbody>